@model Service.DTOs.EditModelDTO
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Model</h1>
<form asp-controller="Model" asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="Id" hidden />
    <table>
        <thead>
            <tr>
                <td>Old name</td>
                <td>New name</td>
                <td>Maker</td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Name</td>
                <td>
                    <input class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </td>
                <td>
                    <select asp-for="MakeId" asp-items="ViewBag.SelectList" required>
                    </select>
                    <span asp-validation-for="MakeId" class="text-danger"></span>
                </td>
            </tr>
        </tbody>
    </table>
    <input type="submit" value="Save Changes" />
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}