@{
    ViewData["Title"] = "Make";
}
<h1>Vehicle Make Administration View</h1>
<a asp-action="CreateMake">Create new maker</a>
@if (ViewBag.Data.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th><a asp-action="Make" asp-route-SortBy="@ViewData["sortBy"]">Name</a> </th>
                <th>Models</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.Data)
            {
            <tr>
                <th>@item.Name</th>
                <th>
                    @foreach (var modelName in item.ModelNames)
                    {
                        @modelName<br />
                    }
                </th>
                <th><a asp-action="EditMake" asp-route-id="@item.Id">Edit</a> | <a asp-action="DeleteMake" asp-route-id="@item.Id">Delete</a></th>
            </tr>
            }
        </tbody>
    </table>
} else
{
    <p>There are currently no vehicle makers stored</p>
}

