@{
    ViewData["Title"] = "Model";
}
<h1>Vehicle Model Administration View</h1>
<a asp-action="CreateModel">Create new model</a>
@if (ViewBag.Data.Count > 0)
{
<table class="table">
    <thead>
        <tr>
            <th><a asp-action="Model" asp-route-SortBy="@ViewData["sortByModel"]">Name</a></th>
            <th><a asp-action="Model" asp-route-SortBy="@ViewData["sortByMake"]">Maker</a></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Data)
        {
            <tr>
                <th>@item.Name</th>
                <th>@item.MakeName</th>
                <th><a asp-action="EditModel" asp-route-id="@item.Id">Edit</a> | <a asp-action="DeleteModel" asp-route-id="@item.Id">Delete</a></th>
            </tr>
        }
    </tbody>
</table>
}
else
{
    <p>There are currently no vehicle models stored</p>
}